{{!< default}}
<header class="site-header outer">
    <div class="inner">
        <div class="site-header-content">
            <h1 class="site-title">
                {{#if @blog.logo}}
                    <img class="site-logo" src="{{@blog.logo}}" alt="{{@blog.title}}" />
                {{else}}
                    {{@blog.title}}
                {{/if}}
            </h1>
            <h2 class="site-description">{{@blog.description}}</h2>
        </div>
    </div>
</header>

{{!-- The main content area --}}
<main id="site-main" class="site-main outer" role="main">
  <div class="inner">
    {{#get "posts" limit="1" include="tags,author" filter="tags:intropage"}}
      {{#foreach posts}}
        <article>
          <header>
            <h1>{{title}}</h1>
          </header>
          <section>
            {{content}}
          </section>
        </article>
      {{/foreach}}
    {{/get}}
  </div>
</main>
